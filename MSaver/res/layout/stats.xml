<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/statsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Spinner
        android:id="@+id/chartType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/chart_types"
        android:prompt="@string/selectChartType" />

    <LinearLayout
        android:id="@+id/chartControlLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fromDate" />
        
        <org.movshovich.msaver.DateSelector
            android:id="@+id/catPieStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0066ff"
            android:layout_marginLeft="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

    </LinearLayout>

</LinearLayout>